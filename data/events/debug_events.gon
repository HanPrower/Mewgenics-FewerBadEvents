            }

            b {
                label "lose face"
                stat none
                animation choice_misc

                good {
                    mutation {
                        mouth -2
                        eyes -2
                        eyebrows -2
                        ears -2
                    }
                }
            }

            c {
                label "lose left side"
                stat none
                animation choice_misc

                good {
                    mutation {
                        eye1 -2
                        eyebrow1 -2
                        ear1 -2
                        arm1 -2
                        leg1 -2
                    }
