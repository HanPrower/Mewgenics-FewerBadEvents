                animation choice_misc

                good {
                    random_mutation {
                        count 15
                        asymmetric true
                    }

                    mutation {
                        eye1 -2
                        eyebrow1 -2
                        ear1 -2
                        arm1 -2
                        leg1 -2
                    }
                }
            }
        }
    }
}


